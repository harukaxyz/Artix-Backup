bindsym $mod+Shift+space floating toggle

# ----------
# parent
# ----------
bindsym $mod+a focus parent

# -----------
# move tab
# -----------
bindsym $mod+Tab workspace next
bindsym $alt+Tab workspace prev

# -----------
# scratchpad
# -----------
bindsym $mod+minus move scratchpad
bindsym $alt+minus [class="^.*"] scratchpad show

